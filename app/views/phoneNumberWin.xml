<Alloy>
	<Window id="win" title="Bofff Me Setup">
		
		<ScrollView scrollingEnabled="false" layout="vertical">
		
			<Label class="descriptionText">
				Keep your bofff friends in sync with your contact list by registering your phone number.
			</Label>
			
			<Label platform="ios" id="lbl_country_ios" class="entryFields" onClick="openPicker" />
			<Picker platform="android" id="picker" class="entryFields" onChange="changeCountryAndCountryCode" />
			
			<!--<Require platform="android" id="picker" src="picker" type="view" top=10></Require>-->
			
			<TextField class="entryFields" id="txt_phoneNumber" hintText="Phone Number" />
		
			<Button onClick="continueBtnPressed">Continue</Button>
			
		</ScrollView>
		
		<Picker platform="ios" id="picker" onChange="changeCountryAndCountryCode" />
		<!--<Require platform="ios" id="picker" src="picker" type="view" top=10></Require>-->
		
		
		<AlertDialog id="dialog_confirm" onClick="dialogConfirmPressed" title="Confirm your number">
            <ButtonNames>
                <ButtonName>Edit</ButtonName>
                <ButtonName>Confirm</ButtonName>
            </ButtonNames>
        </AlertDialog>
		
	</Window>
</Alloy>